@model  mymvc_core.Models.ViewModels.SetPasswordViewModel
@{
    Layout = null;
}

@{
    ViewData["Title"] = "Register";
    Layout = null;
}


<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
<environment include="Development">

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

</environment>
<script src="~/js/site.min.js"></script>


<body class="hold-transition login-page">

    <div class="login-box">

        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>

        <div class="login-box-body">
            <p class="login-box-msg">输入你的新密码。</p>

            <form asp-action="SetPassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group has-feedback">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>


               
                    <input asp-for="UserId" class="form-control"type="hidden" />                  
            
    
                    <input asp-for="Code" class="form-control" type="hidden" />
      


                <div class="form-group has-feedback">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">发送</button>
            </form>
        </div>
    </div>
</body>