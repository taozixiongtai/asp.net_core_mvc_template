@using Microsoft.AspNetCore.Identity
@model mymvc_core.Models.ViewModels.RegisterViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    Layout = null;
    ViewData["Title"] = "Login1";
}


<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
<environment include="Development">

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

</environment>
<script src="~/js/site.min.js"></script>


<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form role="form" action="@Url.Action("login", "identity")" method="post">

                <div class="form-group has-feedback">
                    <input type="text" asp-for="UserName" Class="form-control" , placeholder="账号" />
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <input type="password" asp-for="Password" Class="form-control" , placeholder="密码" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">

                            <label>
                                <input type="checkbox"> 记住该账号
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                    </div>
                </div>
            </form>




            <div class="social-auth-links text-center">
                <p>- OR -</p>

                @{
                    var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();


                    <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in loginProviders)
                                {
                                    <button type="submit" class="btn btn-block btn-social btn-google btn-flat" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fa fa-google-plus"></i>@provider.Name</button>
                                }
                            </p>
                        </div>
                    </form>

                }

         </div>
   

            <a  asp-action="forgotpassword" >忘记密码</a><br>
            <a href="@Url.Action("register1", "identity")" class="text-center">注册账号</a>

        </div>

    </div>
</body>
