@model mymvc_core.Models.ViewModels.AddRoleViewModel
@{
    ViewData["Title"] = "AddRole";
}

<div class="content-wrapper">


    <section class="content">
        <div class="row">
            <div class="col-md-9">
                <!-- box -->
                <div class="box box-warning">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-11">
                                <form role="form" action="@Url.Action("AddRole", "Identity")" method="post">
                                    <span class="text-red">@Html.ValidationSummary()</span>
                                    <div class="invalid" asp-validation-summary="ModelOnly">
                                    </div>


                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(t => t.roleName)
                                                @Html.TextBoxFor(t => t.roleName, new { Class = "form-control" })
                                            </div>
                                        </div>

                                    </div>
                                    <span class="invalid" asp-validation-for="roleName"></span>
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-flat pull-left"><i class="fa fa-check"></i> 添加</button>
                                </form>


                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>





            <div class="col-md-3">
                <!-- accounts-box -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">角色列表</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>已存在的角色</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.roleList)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>